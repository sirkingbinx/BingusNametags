<?xml version="1.0" encoding="utf-8" ?>
<Project>
	<Target Name="CopyToPlugins" AfterTargets="Build" Condition="'$(CI)'!='TRUE'">
		<Copy SourceFiles="$(TargetPath)" DestinationFiles="$(PluginsPath)\BingusNametags\BingusNametags.dll" />
		<Message Text="Copied DLL to Plugins" Importance="high"/>
		<Copy SourceFiles="bin\debug\$(TargetFramework)\BingusNametags.pdb" DestinationFiles="$(PluginsPath)\BingusNametags\BingusNametags.pdb" />
		<Message Text="Copied PDB to Plugins" Importance="high"/>
	</Target>
</Project>
